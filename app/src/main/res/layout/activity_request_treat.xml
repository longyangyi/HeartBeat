<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:text="请求诊疗"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/chooseDoctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择医生"
        />
    <ImageView
        android:id="@+id/doctorPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="医生信息"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="null"
        android:id="@+id/doctorInfomation3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="医生DID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="null"
        android:id="@+id/doctorDID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="支付金额"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="null"
        android:id="@+id/doctorFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="起止时间"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/fromTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <EditText android:id="@+id/toTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="附带消息（声明最近特殊情况）"
        />
    <EditText
        android:id="@+id/additionalInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="发送请求"
        android:id="@+id/sendRequestTreat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>